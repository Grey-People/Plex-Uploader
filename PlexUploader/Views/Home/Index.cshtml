@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <a href="#loginModal"><button class="col s4 offset-s8 logon">Log in</button> </a>
        <h2 class="col s12 main-title">Plex Uploader</h2>
    </div>


    <!-- Login Modal -->
    <div id="loginModal" class="modalDialog">
        <div>
            <a href="#close" title="Close" class="close">X</a>
            <h2>Log in</h2>
            <form id="login" action="">
                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="uname" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" required>

                    <button type="submit">Login</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                    <a href="#"><span class="psw">Forgot password?</span></a>
                    <span>New User? <a href="#">Click here!</a></span>
                </div>
            </form>
        </div>
    </div>

    <!-- Upload box -->
    <div class="uploadBox">
        @using (Html.BeginForm("Upload", "", FormMethod.Post, new { name = "upload", enctype = "multipart/form-data" })) { <!-- enctype="multipart/form-data" needed to process data instead of file name -->
        <div class="box">
            <div class="box_input">
                <svg class="box__icon" width="50" height="43" viewBox="0 0 50 43"><path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z" /></svg>
                <input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} files selected" multiple />
                <label for="file"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
            </div>

            <div class="box__uploading">Uploading&hellip;</div>
            <div class="box__success">Done! <a href="" class="box__restart" role="button">Upload more?</a></div>
            <div class="box__error">Error! <span></span>. <a href="" class="box__restart" role="button">Try again!</a></div>
        </div>
        }
    </div>
</div>
