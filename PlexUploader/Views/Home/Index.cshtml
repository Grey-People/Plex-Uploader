@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <a href="#loginModal"><button class="col s4 offset-s8 logon">Log in</button> </a>
            <h2 class="col s12 main-title">Plex Uploader</h2>
    </div>

    <div id="loginModal" class="modalDialog">
        <div>
            <a href="#close" title="Close" class="close">X</a>
            <h2>Log in</h2>
            <form id="login" action="">
                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="uname" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" required>

                    <button type="submit">Login</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                    <a href="#"><span class="psw">Forgot password?</span></a>
                    <span>New User? <a href="#">Click here!</a></span>
                </div>
            </form>        
        </div>
    </div>
</div>
